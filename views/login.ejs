  <script>
    function myFunction() {
      var x = document.getElementById("floatingPassword");
      var y = document.getElementById("floatingPass");
      if (x.type === "password") {
        x.type = y.type = "text";
      } else {
        x.type = y.type = "password";
      }
    }
  </script>
